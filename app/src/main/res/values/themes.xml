<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.F1Pitstop" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryVariant">@color/grey</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/whitish</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/text_size_big</item>
    </style>

    <style name="homeSelect" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_big</item>
    </style>

    <style name="FontSizeSmall">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>
    <style name="FontSizeMedium">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>
    <style name="FontSizeLarge">
        <item name="android:textSize">@dimen/text_size_big</item>
    </style>
</resources>