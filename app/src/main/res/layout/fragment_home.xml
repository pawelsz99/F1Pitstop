<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/homeConstraint"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HomeFragment">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/select_season"
            style="@style/homeSelect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/select_season"
            app:boxBackgroundColor="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            android:enabled="true"
            android:focusable="false">

            <AutoCompleteTextView
                android:id="@+id/select_season_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none" />


        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/select_race"
            style="@style/homeSelect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/select_race"
            app:layout_constraintTop_toBottomOf="@+id/select_season"
            android:enabled="false">

            <AutoCompleteTextView
                android:id="@+id/select_race_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none" />


        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/select_driver1"
            style="@style/homeSelect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/select_driver1"
            app:layout_constraintTop_toBottomOf="@+id/select_race"
            android:enabled="false">

            <AutoCompleteTextView
                android:id="@+id/select_driver1_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none" />


        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/select_driver2"
            style="@style/homeSelect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/select_driver2"
            app:layout_constraintTop_toBottomOf="@+id/select_driver1"
            android:enabled="false">

            <AutoCompleteTextView
                android:id="@+id/select_driver2_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none" />


        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/button_compare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:background="@color/grey"
            android:fontFamily="@font/roboto"
            android:text="@string/button_compare"
            android:textColor="@color/white"
            style="@style/FontSizeMedium"
            app:backgroundTint="@color/grey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/select_driver2"
            android:enabled="false"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>