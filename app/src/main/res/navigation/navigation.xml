<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.pawelsznuradev.f1pitstop.HomeFragment"
        android:label="HomeFragment" >
        <action
            android:id="@+id/action_homeFragment_to_selectFragment"
            app:destination="@id/selectFragment" >
            <argument
                android:name="listOfItems"
                android:defaultValue="@null" />
        </action>
        <action
            android:id="@+id/action_homeFragment_to_resultFragment"
            app:destination="@id/resultFragment" />
    </fragment>
    <fragment
        android:id="@+id/selectFragment"
        android:name="com.pawelsznuradev.f1pitstop.SelectFragment"
        android:label="fragment_select_list"
        tools:layout="@layout/fragment_select_list" >
        <argument
            android:name="listOfItems" />
    </fragment>
    <fragment
        android:id="@+id/resultFragment"
        android:name="com.pawelsznuradev.f1pitstop.ResultFragment"
        android:label="ResultFragment" />
</navigation>